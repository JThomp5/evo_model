#include "Network.h"

using namespace std;

template <typename T>
Network<T>::Network ( T first_node, T (*vg)(T base), unsigned int size ):gen_(first_node, vg){
  for ( int i = 0; i < size; i++ ){
    V_.add ( gen_.next() );
  }

  printVertices();
}

template <typename T>
void Network<T>::printVertices ( ){
  typename set < Vertex < T > >::iterator it_v;
  
  for ( it_v = V_.begin(); it_v != V_.end(); it_v++ ){
    cout << it_v->toString() << endl;
  }
}
